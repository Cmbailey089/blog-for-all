<div class="row">
  <div class="col-auto">
    <h2>{{name}}'s Dashboard</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="container">
    <h3>Create a New Comment:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Comment:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if comments.length}}
  <div class="col-md-12 project-list">
    <h3>Your comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{comment.id}}">{{comment.title}}{{format_date posted}}</a></h4>
        <h5><a href="/project/{{comment.id}}">{{comment.comment}}</a></h5>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/main.js"></script>

